{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>Participant</h1>

    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Photo</th>
                <th>Campus</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.email }}</td>
                <td><img src="{{ asset('/photos/' ~ participant.photo ) }}" alt="" width="150"></td>
                <td>{{ participant.campus.nom }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}">voir</a>
                    <a href="{{ path('participant_edit', {'id': participant.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participant_new') }}">Cr√©er nouveau</a>
{% endblock %}
